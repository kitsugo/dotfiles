# Blocks for using sway with touchscreen only
separator_block_width=15
markup=pango

[brightness-min]
full_text= 󰃛 
command=brightnessctl set 1 >/dev/null
color=#e0c989

[brightness-down]
full_text= 󰃞 -
command=brightnessctl set 5%- >/dev/null
color=#e0c989

[brightness-up]
full_text= 󰃠 +
command=brightnessctl set 5%+ >/dev/null
color=#e0c989

[volume-mute]
full_text= 󰝟 
command=pactl set-sink-mute @DEFAULT_SINK@ toggle >/dev/null
color=#e0c989

[volume-down]
full_text= 󰝞 
command=pamixer --decrease 5 >/dev/null
color=#e0c989

[volume-up]
full_text= 󰝝 
command=pamixer --increase 5 >/dev/null
color=#e0c989

