[close]
full_text=close 
command=swaymsg kill >/dev/null
color=#f4a261

[previous]
full_text= prev
command=swaymsg workspace prev >/dev/null
color=#f4a261

[move-prev]
full_text=󰳝 move to prev
command=move-window.sh -1 >/dev/null
color=#f4a261

[move-next]
full_text=move to next 󰳟
command=move-window.sh 1 >/dev/null
color=#f4a261

[next]
full_text=next 
command=swaymsg workspace next >/dev/null
color=#f4a261

[lisgd-rot]
full_text= 󰵶 
command=swaymsg exec "killall lisgd && dunstify -u low 'Rotated lisgd!' && tablet-util.sh lisgd" >/dev/null
color=#719cd6

[screenshot]
full_text=screenshot 󰋩 
command=screenshot.sh >/dev/null
color=#719cd6

[virtual-keyboard]
full_text=keyboard 󰌌 
command=swaymsg exec "tablet-util.sh toggle-keyboard" >/dev/null
color=#719cd6

[menu]
full_text=menu 󰵆 
command=swaymsg exec "tablet-util.sh toggle-menu" >/dev/null
color=#719cd6
